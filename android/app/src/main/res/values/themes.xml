<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CoffeeAndHappiness" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/light_background_behind</item>
    </style>


    <style name="Theme.CoffeeAndHappiness" parent="Base.Theme.CoffeeAndHappiness"/>

    <style name = "SCREEN_STYLE">
        <item name="android:background">@color/light_background_behind</item>
    </style>
    <style name = "HEAD_TEXT">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/sofiasans</item>
    </style>

    <style name="TOP_BAR">
        <item name="android:background">@color/light_background_main</item>
    </style>
    
    <style name="HOME_NAME">
        <item name="fontFamily">@font/sofiasans</item>
    </style>

    <style name="HOME_DESCRIPTION">
        <item name="fontFamily">@font/sofiasans</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BOTTOM_NAV_BAR_MIDDLE">
        <item name="android:tint">@color/white_text</item>
    </style>

    <!-- Home section -->
    <style name="HOME_NEWS_CARD">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:background">@color/light_background_main</item>
        <item name="cardBackgroundColor">@color/light_background_main</item>
        <item name="android:layout_margin">12dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="HOME_NEWS_CARD_TEXT">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:fontFamily">@font/sofiasans_straight</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
    <style name="HOME_NEWS_CARD_YEAR">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_black_text</item>
        <item name="android:fontFamily">@font/sofiasans_straight</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:gravity">end</item>
    </style>
    
    
    <!-- Menu section -->
    <style name="MENU_TAB_LAYOUT">
        <item name="tabIndicatorColor">@color/default_green</item>
        <item name="tabIconTint">@color/default_green</item>
        <item name="tabSelectedTextAppearance">@color/default_green</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabSelectedTextColor">@color/default_green</item>
        <item name="tabRippleColor">@color/default_green</item>
        <item name="tabBackground">@color/light_background_main</item>
    </style>

    <style name="MENU_TAB_LAYOUT_TEXT">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="fontFamily">@font/sofiasans_straight</item>
    </style>

</resources>