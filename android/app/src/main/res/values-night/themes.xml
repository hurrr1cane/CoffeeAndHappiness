<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CoffeeAndHappiness" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:statusBarColor">@color/dark_background_behind</item>
    </style>

    <style name="Theme.CoffeeAndHappiness" parent="Base.Theme.CoffeeAndHappiness" />

    <style name="SCREEN_STYLE">
        <item name="android:background">@color/dark_background_behind</item>
    </style>

    <style name="HEAD_TEXT">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/sofiasans_straight</item>
    </style>

    <style name="TOP_BAR">
        <item name="android:background">@color/dark_background_main</item>
    </style>

    <style name="BOTTOM_NAV_BAR_MIDDLE">
        <item name="android:tint">@color/black_text</item>
    </style>

    <!-- Home section -->
    <style name="HOME_NEWS_CARD">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:background">@color/dark_background_main</item>
        <item name="cardBackgroundColor">@color/dark_background_main</item>
        <item name="android:layout_margin">12dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="HOME_NEWS_CARD_TEXT">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:fontFamily">@font/sofiasans_straight</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="HOME_NEWS_CARD_YEAR">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_white_text</item>
        <item name="android:fontFamily">@font/sofiasans_straight</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="HOME_NEWS_ADDITIONAL_TEXT">
        <item name="android:textColor">@color/gray_white_text</item>
    </style>

    <!-- Menu section -->
    <style name="MENU_TAB_LAYOUT">
        <item name="tabIndicatorColor">@color/default_green</item>
        <item name="tabIconTint">@color/default_green</item>
        <item name="tabSelectedTextAppearance">@color/default_green</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabSelectedTextColor">@color/default_green</item>
        <item name="tabRippleColor">@color/default_green</item>
        <item name="tabBackground">@color/dark_background_main</item>
    </style>

    <style name="MENU_TAB_LAYOUT_TEXT">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:fontFamily">@font/sofiasans_straight</item>
    </style>

    <style name="MENU_FOOD_CARD">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/dark_background_main</item>
        <item name="cardBackgroundColor">@color/dark_background_main</item>
        <item name="android:layout_margin">10dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="MENU_FOOD_NAME">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:fontFamily">@font/sofiasans_straight</item>
    </style>

    <style name="MENU_FOOD_DESCRIPTION">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:fontFamily">@font/sofiasans_straight</item>
    </style>

    <style name="MENU_FOOD_SUPPORTIVE_TEXT">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray_white_text</item>
        <item name="android:fontFamily">@font/sofiasans_straight</item>
    </style>

    <style name="MENU_FOOD_PRICE">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/default_green</item>
        <item name="android:fontFamily">@font/sofiasans_straight</item>
    </style>

    <style name="FOOD_CARD">
        <item name="android:background">@color/dark_background_main</item>
    </style>

    <style name="FOOD_BACK_BUTTON">
        <item name="android:src">@drawable/baseline_arrow_back_white_24</item>
        <item name="android:background">@drawable/circle_black</item>
    </style>

    <style name="FOOD_TEXT">
        <item name="android:textColor">@color/white_text</item>
    </style>

    <style name="FOOD_GREEN_TEXT">
        <item name="android:textColor">@color/default_green</item>
    </style>

    <style name="FOOD_BUTTON">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:background">@color/dark_background_main</item>
    </style>

    <!-- Account section -->
    <style name="ACCOUNT_MAIN_DIALOG_TEXT">
        <item name="fontFamily">@font/sofiasans_straight</item>
    </style>

    <style name="ACCOUNT_TEXT">
        <item name="android:textColor">@color/white_text</item>
    </style>

    <style name="ACCOUNT_ENTER_BACKGROUND">
        <item name="android:background">@drawable/account_textfield_black</item>
    </style>

    <style name="ACCOUNT_ENTER_TEXT" parent="ACCOUNT_ENTER_BACKGROUND">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textColorHint">@color/gray_white_text</item>
    </style>

    <style name="ACCOUNT_ENTER_EMAIL" parent="ACCOUNT_ENTER_TEXT">
        <item name="android:drawableStart">@drawable/baseline_email_white_24</item>
    </style>

    <style name="ACCOUNT_ENTER_PASSWORD" parent="ACCOUNT_ENTER_TEXT">
        <item name="android:drawableStart">@drawable/baseline_password_white_24</item>
    </style>

    <style name="ACCOUNT_ENTER_BUTTON">
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="ACCOUNT_GOOGLE">
        <item name="android:background">@drawable/circle_black</item>
    </style>

    <style name="ACCOUNT_CURSOR" parent="">
        <item name="android:colorPrimary">@color/default_green</item>
        <item name="android:colorControlActivated">@color/default_green</item>
        <item name="colorAccent">@color/default_green</item>
    </style>

    <style name="ACCOUNT_REGISTER_ENTER_NAME" parent="ACCOUNT_ENTER_TEXT">
        <item name="android:drawableStart">@drawable/baseline_person_white_24</item>
    </style>

    <style name="ACCOUNT_MAIN_BUTTON">
        <item name="android:background">@drawable/button_square_black</item>
        <item name="android:textColor">@color/white_text</item>
    </style>

    <style name="ACCOUNT_MAIN_PICTURE">
        <item name="background">@color/dark_background_behind</item>
    </style>

    <style name="ACCOUNT_EDIT_PHONE" parent="ACCOUNT_ENTER_TEXT">
        <item name="android:drawableStart">@drawable/baseline_phone_white_24</item>
    </style>


    <!-- Reviews section -->
    <style name="REVIEW_SEPARATE_LINE">
        <item name="android:background">@color/gray_black_text</item>
    </style>

    <!-- Code section -->
    <style name="CODE_VIEW_ORDERS">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:background">@color/dark_background_main</item>
    </style>

    <style name="CODE_WAITER_CARD">
        <item name="android:background">@color/dark_background_main</item>
    </style>

    <style name="CODE_WAITER_POP_UP">
        <item name="android:background">@drawable/bottomsheet_black</item>
    </style>

    <style name="CODE_WAITER_POP_UP_ICON">
        <item name="android:src">@drawable/baseline_remove_white_24</item>
    </style>

</resources>