<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CoffeeAndHappiness" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:statusBarColor">@color/dark_background_behind</item>
    </style>

    <style name="Theme.CoffeeAndHappiness" parent="Base.Theme.CoffeeAndHappiness" />

    <style name = "SCREEN_STYLE">
        <item name="android:background">@color/dark_background_behind</item>
    </style>
    <style name = "HEAD_TEXT">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/sofiasans</item>
    </style>

    <style name="TOP_BAR">
        <item name="android:background">@color/dark_background_main</item>
    </style>

    <style name="BOTTOM_NAV_BAR_MIDDLE">
        <item name="android:tint">@color/black_text</item>
    </style>

    <!-- Home section -->
    <style name="HOME_NEWS_CARD">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:background">@color/dark_background_main</item>
        <item name="cardBackgroundColor">@color/dark_background_main</item>
        <item name="android:layout_margin">12dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="HOME_NEWS_CARD_TEXT">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:fontFamily">@font/sofiasans_straight</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
    <style name="HOME_NEWS_CARD_YEAR">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_white_text</item>
        <item name="android:fontFamily">@font/sofiasans_straight</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:gravity">end</item>
    </style>
</resources>