<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SCREEN_STYLE"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.accountfragments.AccountMainFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    style="@style/FOOD_CARD"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="1000dp">

                        <ImageView
                            android:id="@+id/accountMainPicture"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            style="@style/ACCOUNT_MAIN_PICTURE"
                            android:scaleType="centerCrop"
                            android:src="@drawable/baseline_person_black_24" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/FOOD_TEXT"
                            android:id="@+id/accountMainName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:fontFamily="@font/sofiasans_straight"
                            android:text="Maksym"
                            android:textSize="24sp" />

                        <TextView
                            style="@style/FOOD_TEXT"
                            android:id="@+id/accountMainSurname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:fontFamily="@font/sofiasans_straight"
                            android:text="Kozytskyy"
                            android:textSize="24sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <TextView
                            style="@style/FOOD_TEXT"
                            android:id="@+id/accountMainEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:fontFamily="@font/sofiasans_straight"
                            android:text="maksymkozytskyy@gmail.com"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatButton
                        style="@style/ACCOUNT_MAIN_BUTTON"
                        android:fontFamily="@font/sofiasans_straight"
                        android:textSize="20sp"
                        android:id="@+id/accountMainEditAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/account_main_edit" />

                    <androidx.appcompat.widget.AppCompatButton
                        style="@style/ACCOUNT_MAIN_BUTTON"
                        android:fontFamily="@font/sofiasans_straight"
                        android:textSize="20sp"
                        android:id="@+id/accountMainReviews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/account_main_reviews" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <androidx.appcompat.widget.AppCompatButton
                        style="@style/ACCOUNT_MAIN_BUTTON"
                        android:id="@+id/accountMainFAQ"
                        android:fontFamily="@font/sofiasans_straight"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/account_main_faq" />

                    <androidx.appcompat.widget.AppCompatButton
                        style="@style/ACCOUNT_MAIN_BUTTON"
                        android:id="@+id/accountMainPrivacyPolicy"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/sofiasans_straight"
                        android:textSize="20sp"
                        android:layout_height="wrap_content"
                        android:text="@string/account_main_privacy" />

                    <androidx.appcompat.widget.AppCompatButton
                        style="@style/ACCOUNT_MAIN_BUTTON"
                        android:fontFamily="@font/sofiasans_straight"
                        android:textSize="20sp"
                        android:id="@+id/accountMainFeedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/account_main_feedback" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/accountMainLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/sofiasans_straight"
                android:textSize="20sp"
                android:background="@drawable/account_button_logout"
                android:text="@string/account_main_logout" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>