<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.codefragments.menufragments.CodeWaiterMenuSaladsFragment">

    <LinearLayout
        android:id="@+id/codeWaiterMenuSaladsNoInternet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/disconnected" />

        <TextView
            style="@style/FOOD_TEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/sofiasans_straight"
            android:gravity="center"
            android:text="@string/internet_no_connection"
            android:textSize="25sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/codeWaiterMenuSaladsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</FrameLayout>